@model IEnumerable<Journal.Models.Group>

@{
    ViewBag.Title = "Группы";
}
<div class="row justify-content-center">
    <div class="col-md-8" style="padding:2vh 3vw">
        <h2>Группы</h2>

        @if (User.IsInRole("Преподаватель"))
        {
            <p>
                @Html.ActionLink("Создать группу", "Create", "Groups") |
                @Html.ActionLink("Добавить группу", "Add", "Groups")
            </p>
        }
        else
        {
            <p>
                @Html.ActionLink("Стать участником группы", "Join", "Groups")
            </p>
        }
        <table class="table table-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                @if (User.IsInRole("Преподаватель"))
                {
                    <th>
                        @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <th></th>
                }
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    @if (User.IsInRole("Преподаватель"))
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.ActionLink("Изменить", "Edit", "Groups", new { id = item.Id }, null) |
                            @Html.ActionLink("Просмотреть", "Details", "Groups", new { id = item.Id }, null) |
                            @Html.ActionLink("Удалить", "Delete", "Groups", new { id = item.Id }, null)
                        </td>
                    }
                </tr>
            }

        </table>
    </div>
</div>
