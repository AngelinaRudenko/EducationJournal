@model Journal.Models.Group

@{
    ViewBag.Title = "Стать участником группы";
}
<div class="row justify-content-center">
    <div class="col-md-7" style="padding:2vh 3vw">
        <h2>Стать участником группы</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                <div class="form-group">
                    @Html.TextBox("code", "", htmlAttributes: new { placeholder = "Введите код группы", @class = "form-control" })
                </div>

                <div class="form-group text-center">
                    <div class="col-md-offset-2">
                        <input type="submit" value="Войти" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Вернуться к списку", "Groups", "Home")
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
