<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Электронный журнал</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color: #e3f2fd;">

    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("Журнал", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse w-100" id="navbarNavAltMarkup">
            <div class="navbar-nav mr-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Группы", "Groups", "Home", null, new { @class = "nav-item nav-link @*active*@" })
                    @Html.ActionLink("Оценки", "Marks", "Home", null, new { @class = "nav-item nav-link @*active*@" })
                    @Html.ActionLink("Предметы", "Subjects", "Home", null, new { @class = "nav-item nav-link @*active*@" })
                }
            </div>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <div class="container body-content" style="padding-top: 3vh;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET разработано Ангелиной Руденко</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
